<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.riofuad.moviehub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.riofuad.moviehub.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieHub">
        <activity android:name="com.riofuad.moviehub.setting.SettingActivity"
            android:label="@string/setting"
            />
        <activity
            android:name="com.riofuad.moviehub.splashscreen.SplashScreenActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.riofuad.moviehub.detail.DetailActivity"
            android:exported="false"
            android:label="@string/detail_movie" />
        <activity
            android:name="com.riofuad.moviehub.home.HomeActivity"
            android:exported="false"
            android:label="@string/home" />
    </application>

</manifest>